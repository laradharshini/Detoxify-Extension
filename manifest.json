{
    "manifest_version": 3,
    "name": "Detoxify",
    "version": "1.0",
    "description": "Monitors and mitigates abusive messages on WhatsApp Web.",
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "notifications"
    ],
    "host_permissions": [
        "https://web.whatsapp.com/*",
        "https://storage.googleapis.com/*",
        "https://tfhub.dev/*",
        "https://*.tfhub.dev/*",
        "https://*.kaggle.com/*",
        "https://*.google.com/*",
        "https://*.gstatic.com/*",
        "https://*.googleapis.com/*",
        "https://*.googleusercontent.com/*",
        "https://generativelanguage.googleapis.com/*",
        "http://localhost:5000/*",
        "https://api.emailjs.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "index.css"
            ]
        }
    ],
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}